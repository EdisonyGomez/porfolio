---
import "@fontsource-variable/nunito-sans"
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="theme-color" content="#3576b3"/>
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	
	<body class=" inset-0 
		bg-[radial-gradient(circle_farthest-side,#00c4ff4a,rgba(255,255,255,0))]">
		<Header />
		<slot />		
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
		--background: rgb(85, 221, 198);
		--primary: #88D5BF;
		--secondary: #2572b0;
		--third: #486dd2;
	}
	html {
		font-family: 'Nunito Sans Variable',system-ui, sans-serif;
		/* background-color: #1f1e1e; */
		scrollbar-color: #0a66c2 #1f1e1e;
		scrollbar-width: thin;
		scroll-behavior: smooth;

	}
	body{
		display: flex;
		flex-direction: column;
		/* justify-content: center; */
		align-items: center;
		min-height: 100dvh;
		min-width: 100%;
		/* border: solid white; */
	}
	.shape {
		background: linear-gradient(45deg, var(--primary) 0%, var(--secondary) 100%);
		animation: morph 8s ease-in-out infinite;
		border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
		height: 250px;
		transition: all 1s ease-in-out;
		width: 240px;
		z-index: 5;
		box-shadow: 1px 0px 13px #0a66c2;
	}
	.shape img{
		border-radius: 50% 50% 49% 51% / 73% 66% 34% 27%;
	}

	@keyframes morph {
	0% {
		border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
		background: linear-gradient(45deg, var(--primary) 0%, var(--secondary) 100%);
	}
	50% {
		border-radius: 30% 60% 70% 40%/50% 60% 30% 60%;
		background: linear-gradient(45deg, var(--third) 0%, var(--secondary) 100%);
	}
	100% {
		border-radius: 60% 40% 30% 70%/60% 30% 70% 40%;
		background: linear-gradient(45deg, var(--primary) 0%, var(--secondary) 100%);
	}
	}

	.img-aframe:nth-child(1){
		width: 83px;
		margin: 0;
		padding: 0;
	}

	@media screen and ( width < 500px) {
		body{
			/* width: 100vw;
			height: 300dvb; */

		}
	}
</style>
